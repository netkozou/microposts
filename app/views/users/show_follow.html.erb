<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    </section>
    <section class="stats">


    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <div class="users follow">

        <% @users.each do |user| %>
        <ol>
        <%= link_to gravatar_for2(user, size: 30), user %>
        <%= user.name %>
        </ol>
        <% end %>
      </div>
    <% end %>
  </div>
</div>